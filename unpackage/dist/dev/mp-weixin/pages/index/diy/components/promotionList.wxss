.index-product-wrapper {
  margin: 30rpx 20rpx 0 20rpx;
}
.index-product-wrapper.on {
  min-height: 1500rpx;
}
.index-product-wrapper .nav-bd {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}
.index-product-wrapper .nav-bd .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 25%;
}
.index-product-wrapper .nav-bd .item.on {
  border-radius: 0;
}
.index-product-wrapper .nav-bd .item .txt {
  font-size: 32rpx;
  color: #282828;
}
.index-product-wrapper .nav-bd .item .label {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 124rpx;
  height: 32rpx;
  margin-top: 5rpx;
  font-size: 24rpx;
  color: #999;
  border-radius: 16rpx;
}
.index-product-wrapper .list-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 30rpx;
}
.index-product-wrapper .list-box .item {
  width: 345rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}
.index-product-wrapper .list-box .item .pictrue_log {
  width: 92rpx;
  height: 44rpx;
  font-size: 26rpx;
  line-height: 44rpx;
}
.index-product-wrapper .list-box .item image {
  width: 100%;
  height: 346rpx;
  display: block;
}
.index-product-wrapper .list-box .item .text-info {
  padding: 10rpx 20rpx 15rpx;
}
.index-product-wrapper .list-box .item .text-info .title {
  color: #222222;
}
.index-product-wrapper .list-box .item .text-info .old-price {
  margin-top: 4rpx;
  font-size: 26rpx;
  color: #AAAAAA;
  text-decoration: line-through;
}
.index-product-wrapper .list-box .item .text-info .old-price text {
  margin-right: 2px;
  font-size: 20rpx;
}
.index-product-wrapper .list-box .item .text-info .price {
  display: flex;
  align-items: flex-end;
  font-size: 36rpx;
  font-weight: 550;
}
.index-product-wrapper .list-box .item .text-info .price text {
  padding-bottom: 4rpx;
  font-size: 26rpx;
  font-weight: normal;
}
.index-product-wrapper .list-box .item .text-info .price .txt {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 28rpx;
  height: 28rpx;
  margin-left: 15rpx;
  margin-bottom: 10rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  font-weight: normal;
}
.index-product-wrapper .list-box .item .text-info .price .txt.on {
  margin-left: 0;
}
.index-product-wrapper .list-box.on {
  display: flex;
}

