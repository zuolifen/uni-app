.group-wrapper {
  padding: 20rpx 20rpx 26rpx 20rpx;
  background: #fff;
}
.group-wrapper .hd {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.group-wrapper .hd .left {
  display: flex;
  align-items: center;
}
.group-wrapper .hd .left .name {
  font-size: 32rpx;
  font-weight: 600;
}
.group-wrapper .hd .left .icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}
.group-wrapper .hd .left .title {
  width: 134rpx;
  height: 33rpx;
}
.group-wrapper .hd .left .person {
  display: flex;
  align-items: center;
  margin-left: 40rpx;
}
.group-wrapper .hd .left .person .avatar-box {
  display: flex;
  align-items: center;
}
.group-wrapper .hd .left .person .avatar-box image {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  margin-right: -10rpx;
}
.group-wrapper .hd .left .person .num {
  margin-left: 18rpx;
  font-size: 26rpx;
  color: #999999;
}
.group-wrapper .hd .more {
  font-size: 26rpx;
  color: #999;
}
.group-wrapper .hd .more .iconfont {
  margin-left: 6rpx;
  font-size: 25rpx;
}
.group-wrapper .group-scroll {
  width: 100%;
  margin-top: 25rpx;
}
.group-wrapper .group-scroll .group-item {
  display: inline-block;
  width: 220rpx;
  box-shadow: 0px 2px 6px 2px rgba(0, 0, 0, 0.03);
  border-radius: 16rpx;
  position: relative;
  background-color: #fff;
}
.group-wrapper .group-scroll .group-item .people {
  position: absolute;
  width: 140rpx;
  height: 32rpx;
  background: rgba(0, 0, 0, 0.1);
  box-shadow: 2rpx 2rpx 8rpx 0 rgba(0, 0, 0, 0.06);
  border-radius: 16rpx;
  top: 12rpx;
  left: 12rpx;
  font-size: 20rpx;
  color: #fff;
  text-align: center;
  line-height: 32rpx;
}
.group-wrapper .group-scroll .group-item image {
  width: 100%;
  height: 220rpx;
  border-radius: 16rpx 16rpx 0 0;
}
.group-wrapper .group-scroll .group-item .info {
  padding: 2rpx 12rpx 10rpx 12rpx;
}
.group-wrapper .group-scroll .group-item .info .name {
  font-size: 24rpx;
}
.group-wrapper .group-scroll .group-item .info .price-box {
  display: flex;
  align-items: center;
  margin-top: 6rpx;
}
.group-wrapper .group-scroll .group-item .info .price-box .tips {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 76rpx;
  height: 30rpx;
  margin-right: 6rpx;
  border-radius: 2px;
  font-size: 18rpx;
}
.group-wrapper .group-scroll .group-item .info .price-box .price {
  font-size: 28rpx;
  font-weight: 700;
}
.group-wrapper .group-scroll .group-item .info .price-box .price text {
  font-size: 18rpx;
}
.group-wrapper .group-scroll .group-item .bom-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 48rpx;
  border-radius: 0px 0px 16rpx 16rpx;
  color: #fff;
  font-size: 24rpx;
}

