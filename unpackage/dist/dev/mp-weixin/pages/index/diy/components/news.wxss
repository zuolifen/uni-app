.pageOn {
  border-radius: 12rpx !important;
}
.news {
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  height: 77rpx;
  border-top: 1rpx solid #f4f4f4;
  padding: 0 20rpx;
  box-shadow: 0 10rpx 30rpx #f5f5f5;
}
.news .pictrue {
  width: 130rpx;
  height: 36rpx;
  border-right: 1rpx solid #ddd;
  padding-right: 23rpx;
  box-sizing: content-box;
}
.news .pictrue image {
  width: 100%;
  height: 100%;
}
.news .swiperTxt {
  width: 523rpx;
  height: 100%;
  line-height: 77rpx;
  overflow: hidden;
  margin-left: 22rpx;
}
.news .swiperTxt .text {
  width: 89%;
}
.news .swiperTxt .text .label {
  font-size: 20rpx;
  color: #ff4c48;
  width: 64rpx;
  height: 30rpx;
  border-radius: 40rpx;
  text-align: center;
  line-height: 28rpx;
  border: 2rpx solid #ff4947;
}
.news .swiperTxt .text .newsTitle {
  width: 100%;
  font-size: 24rpx;
  color: #666;
}
.news .swiperTxt .iconfont {
  font-size: 28rpx;
  color: #888;
}
.news .swiperTxt swiper {
  height: 100%;
}

