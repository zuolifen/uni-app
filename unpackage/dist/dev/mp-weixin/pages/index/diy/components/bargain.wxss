.barg {
  padding-bottom: 32rpx;
  padding-left: 20rpx;
  background: linear-gradient(180deg, #fddbb2 0%, #fdefc6 100%);
  background-size: 100% 100%;
  box-sizing: border-box;
}
.barg .title {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 42rpx;
  font-size: 38rpx;
  color: #FF6000;
  font-weight: bold;
}
.barg .title image {
  width: 463rpx;
  height: 39rpx;
}
.barg .barg-swiper {
  margin-top: 43rpx;
  padding-right: 20rpx;
}
.barg .barg-swiper .wrapper {
  display: flex;
}
.barg .barg-swiper .list-box {
  flex-shrink: 0;
  width: 210rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.barg .barg-swiper .list-box image {
  width: 100%;
  height: 210rpx;
}
.barg .barg-swiper .list-box .info-txt {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 4rpx;
  padding-bottom: 18rpx;
}
.barg .barg-swiper .list-box .info-txt .price {
  font-weight: 700;
  color: #E93323;
  font-size: 28rpx;
}
.barg .barg-swiper .list-box .info-txt .price text {
  font-size: 18rpx;
}
.barg .barg-swiper .list-box .info-txt .txt {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 136rpx;
  height: 33rpx;
  margin-top: 10rpx;
  border-radius: 17px;
  font-size: 18rpx;
  color: #fff;
}
.barg .barg-swiper .more-box {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  background-color: #fff;
  border-radius: 16rpx;
}
.barg .barg-swiper .more-box image {
  width: 24rpx;
  height: 24rpx;
  margin-top: 10rpx;
}
