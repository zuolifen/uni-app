.advert {
  box-sizing: border-box;
}
.advert image {
  width: 100%;
  box-sizing: border-box;
  display: block;
}
.swipers {
  position: relative;
  width: 100%;
  margin: 0 auto;
  border-radius: 10rpx;
  /* 设置圆角 */
}
.swipers.fillet {
  border-radius: 10rpx;
}
.swipers.fillet image {
  border-radius: 10rpx;
}
.swipers swiper,
.swipers .swiper-item,
.swipers image {
  width: 100%;
}
.swipers image {
  -webkit-transform: scale(0.93);
          transform: scale(0.93);
  transition: all .6s ease;
}
.swipers swiper-item.active image {
  -webkit-transform: scale(1);
          transform: scale(1);
}
.swipers.circular .uni-swiper-dot {
  width: 10rpx !important;
  height: 10rpx !important;
  background: rgba(0, 0, 0, 0.4) !important;
}
.swipers.circular .uni-swiper-dot-active {
  background: #fff !important;
}
.swipers.square .uni-swiper-dot {
  width: 20rpx !important;
  height: 5rpx !important;
  border-radius: 3rpx;
  background: rgba(0, 0, 0, 0.4) !important;
}
.swipers.square .uni-swiper-dot-active {
  background: #fff !important;
}

