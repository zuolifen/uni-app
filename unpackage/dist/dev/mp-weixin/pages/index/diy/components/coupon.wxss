.coupon {
  background-color: #fff;
  padding: 20rpx;
}
.coupon .item {
  display: flex;
  width: 304rpx;
  height: 122rpx;
  background-color: #DDDDDD;
  border-radius: 8rpx;
  color: #fff;
  position: relative;
  display: inline-block;
  flex-shrink: 0;
}
.coupon .item .roll {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #fff;
}
.coupon .item .roll.up-roll {
  right: 52rpx;
  top: -10rpx;
}
.coupon .item .roll.down-roll {
  right: 52rpx;
  bottom: -10rpx;
}
.coupon .item .itemCon {
  height: 100%;
  width: 100%;
}
.coupon .item .itemCon .text {
  width: 240rpx;
}
.coupon .item .itemCon .text .money {
  font-size: 48rpx;
  text-align: center;
}
.coupon .item .itemCon .text .money text {
  font-size: 24rpx;
}
.coupon .item .itemCon .text .info {
  font-size: 24rpx;
  text-align: center;
}
.coupon .item .itemCon .bnt {
  position: relative;
  height: 100%;
  font-size: 20rpx;
  display: block;
  -webkit-writing-mode: vertical-lr;
          writing-mode: vertical-lr;
  line-height: 1.2;
  width: 64rpx;
  border-left: 1px dashed #fff;
}
.coupon .item .itemCon .bnt text {
  position: absolute;
  left: 56%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.coupon .wrapper {
  display: flex;
}
.coupon .more-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 10px;
  height: 122rpx;
}
.coupon .more-box image {
  width: 20rpx;
  height: 20rpx;
  margin-top: 10rpx;
  margin: 10rpx 0 0 5rpx;
}
.coupon .more-box .txt {
  display: block;
  -webkit-writing-mode: vertical-lr;
          writing-mode: vertical-lr;
  font-size: 20rpx;
  line-height: 1.2;
}

