.dot {
  width: 100%;
  padding-bottom: 20rpx;
}
.dot .instruct {
  width: 50rpx;
  height: 36rpx;
  line-height: 36rpx;
  background-color: rgba(0, 0, 0, 0.8);
  color: #fff;
  border-radius: 16rpx;
  font-size: 24rpx;
  text-align: center;
}
.dot .dot-item {
  width: 10rpx;
  height: 10rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 50%;
  margin: 0 4px;
}
.dot .dot-item.line_dot-item {
  width: 20rpx;
  height: 5rpx;
  border-radius: 3rpx;
}
.nav.oneNav {
  padding-bottom: 25rpx;
}
.nav .item {
  margin-top: 30rpx;
  width: 160rpx;
  text-align: center;
  font-size: 24rpx;
  display: inline-block;
}
.nav .item .pictrue {
  width: 90rpx;
  height: 90rpx;
  margin: 0 auto;
}
.nav .item .pictrue image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.nav .item .pictrue.on image {
  border-radius: 0;
}
.nav .item .menu-txt {
  margin-top: 15rpx;
}
.swiper {
  z-index: 20;
  position: relative;
  overflow: hidden;
}
.swiper .nav .item {
  width: 33.3333%;
}
.swiper .nav .item.four {
  width: 25%;
}
.swiper .nav .item.five {
  width: 20%;
}
.swiper swiper,
.swiper .swiper-item {
  width: 100%;
  display: block;
}

