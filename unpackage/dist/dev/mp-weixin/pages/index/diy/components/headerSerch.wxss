.header {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(90deg, #f62c2c 50%, #f96e29 100%);
}
.header .serch-wrapper {
  padding: 20rpx 20rpx 0 0;
}
.header .serch-wrapper .logo {
  height: 60rpx;
  margin-right: 20rpx;
  width: 154rpx;
  text-align: center;
}
.header .serch-wrapper .logo image {
  width: 100%;
  height: 100%;
}
.header .serch-wrapper .input {
  flex: 1;
  height: 58rpx;
  padding: 0 0 0 30rpx;
  background: #f7f7f7;
  border: 1px solid #f1f1f1;
  color: #BBBBBB;
  font-size: 28rpx;
}
.header .serch-wrapper .input .iconfont {
  margin-right: 20rpx;
}
.header .serch-wrapper .input.on {
  width: 100%;
}
.header .serch-wrapper .input.fillet {
  border-radius: 29rpx;
}
.header .serch-wrapper .input.row-center {
  padding: 0;
}
.mp-header {
  z-index: 30;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  background: linear-gradient(90deg, #f62c2c 50%, #f96e29 100%);
}
.mp-header .serch-wrapper {
  height: 100%;
  padding: 0 220rpx 0 53rpx;
}
.mp-header .serch-wrapper .logo {
  height: 60rpx;
  margin-right: 30rpx;
}
.mp-header .serch-wrapper .logo image {
  width: 100%;
  height: 100%;
}
.mp-header .serch-wrapper .input {
  flex: 1;
  height: 50rpx;
  padding: 0 0 0 30rpx;
  background: #f7f7f7;
  border: 1px solid #f1f1f1;
  color: #BBBBBB;
  font-size: 28rpx;
}
.mp-header .serch-wrapper .input .iconfont {
  margin-right: 20rpx;
}
.mp-header .serch-wrapper .input.on {
  width: 70%;
}
.mp-header .serch-wrapper .input.fillet {
  border-radius: 29rpx;
}
.mp-header .serch-wrapper .input.row-center {
  padding: 0;
}

